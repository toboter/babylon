<% title "Periodicals and Serials", nil %>

<% content_for :breadcrumbs_section do %>
  <nav class="breadcrumbs">
    <%= link_to 'Periodicals and serials', serials_path %>
  </nav>
<% end %>

<% content_for :link_section do %>
  <div class="button-bar right">
    <ul class="button-group">
      <li><%= link_to "Bibliography", references_path, class: "button small secondary" %></li>
      <li><%= link_to "Books", books_path, class: "button small secondary" %></li>
    </ul>
  </div>
<% end %>

<% content_for :main_section do %>
<div class="row collpase">
  <div class="large-12 columns">
    <% @serials.each do |serial| %>
      <%= content_tag :div, class: 'list-entry' do -%>
        <div class="row">
          <%= content_tag :div, class: 'large-1 small-1 columns', style: 'text-align:right;' do -%>
            <ul class="no-bullet">
              <%= content_tag :li, serial.shortcut %>
              <li><small><%= serial.serial_type %></small></li>
            </ul>
          <% end -%>
          <%= content_tag :div, class: 'large-5 small-5 columns' do -%>
            <p>
              <%= content_tag :span, link_to("#{serial.name}", serial) %>
            </p>
          <% end -%>
          <%= content_tag :div, class: 'large-5 small-5 columns' do -%>
            <p>
              <%= content_tag :span, link_to("#{serial.uri}", serial.uri, :target => '_blank') %>
            </p>
          <% end -%>
          <% if can? :edit, serial %>
            <%= content_tag :div, class: 'large-1 small-1 columns right' do -%>
              <p><%= link_to "Edit", edit_serial_path(serial) %></p>
            <% end -%>
          <% end %>
        </div>
      <% end -%>
    <% end %>
  </div>

  <div class="">
    <h5 class="subheader"></h5>
    <ul class="no-bullet">
      <li></li>
    </ul>
  </div>
</div>


<% end %>

<% content_for :footer_section do %>
  <% if can? :edit, @serials %>
    <div class="large-6 columns">
      <ul class="pricing-table">
        <li class="title">Periodicals and Serials</li>
        <li class="description">Hier ergänzender Text über die Möglichkeiten und Konsequenzen</li>
        <li class="cta-button"><%= link_to 'Add Periodical or Serial', new_serial_path, class: "button" %></li>
      </ul>
    </div>
  <% end %>
<% end %>