<h1>Listing assets</h1>

<table>
  <tr>
    <th>Asset</th>
    <th>Name</th>
    <th>Parent</th>
    <th>Content type</th>
    <th>File size</th>
    <th>File name</th>
    <th>File datetime</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @assets.each do |asset| %>
  <tr>
    <td><%= asset.assetfile %></td>
    <td><%= asset.name %></td>
    <td><%= asset.parent_id %></td>
    <td><%= asset.content_type %></td>
    <td><%= asset.file_size %></td>
    <td><%= asset.file_name %></td>
    <td><%= asset.file_datetime %></td>
    <td><%= link_to 'Show', asset %></td>
    <td><%= link_to 'Edit', edit_asset_path(asset) %></td>
    <td><%= link_to 'Destroy', asset, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />
