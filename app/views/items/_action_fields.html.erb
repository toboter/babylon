<fieldset class="nested-fields" style="border:1px solid #f5f5f5; padding:20px 0;margin-bottom:10px;">
  <div class="action-field">
    <div class="control-group">
      <%= f.label :predicate_id, 'Predicate', class: 'control-label' %>
      <div class="form-inline controls">
        <%= f.collection_select :predicate_id, Predicate.where('scope_type = ?', 'Action'), :id, :name, class: 'span6' %>
        <small><%= link_to_remove_association "remove", f %></small>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :person_id, 'Person Entry', class: 'control-label' %>
      <div class="controls">
        <%= f.collection_select :person_id, Person.all, :id, :name, class: 'span6' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :actable_date_text, 'Date of action', class: 'control-label' %>
      <div class="controls">
        <div class="input-append date">
          <%= f.text_field :actable_date_text, placeholder: 'Date', :'data-behaviour' => 'datepicker' %>
          <span class="add-on"><i class="icon-th"></i></span>
        </div>
      </div>
    </div>
  </div>

  <div id='sources'>
    <%= f.fields_for :source_assignments do |builder| %>
      <%= render "source_assignment_fields", :f => builder %>
    <% end %>
    <div class="links controls">
      <%= link_to_add_association "Add Source", f, :source_assignments %>
    </div>
  </div>

  <div id='locations'>
    <%= f.fields_for :locations do |builder| %>
      <%= render "shared/location_fields", :f => builder %>
    <% end %>
    <div class="links controls">
      <%= link_to_add_association "Add Location", f, :locations, :partial => 'shared/location_fields' %>
    </div>
  </div>

</fieldset>