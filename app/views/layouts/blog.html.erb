<% content_for :content do %>
<div id="wrap">
  <header>

      <%= content_tag :div, class: 'navbar navbar-inverse navbar-fixed-top' do %>
        <%= render 'shared/navbar' %>
      <% end %>
      <%= content_tag :div, class: "admin-block" do %>
        <%= yield(:top_over) %>
      <% end if (can? :manage, Snippet) %>
  </header>

  <div class="container-fluid">
    <%= render "shared/flash", flash: flash %>
	  <%= render "shared/debug" %>    

    <div class="row">
      <div class="span6 offset2" style="margin-top:30px;">
        <%= content_tag :h1, yield(:title), class: 'pagetop' if show_title? %>
        <%= content_tag :h2, class: 'subtitle' do %>
          <%= yield(:subtitle) %>
          <%= yield(:edit_section) %>
        <% end if show_title? %>
        <%= yield(:main_section) %>
        <%= yield(:footer_section) %>
  	  </div>
    </div>
  

    
  </div>
  <div id="push"></div>
</div>
<%= render "shared/site_footer" %>

<% end %>

<%= render :template => 'layouts/application' %>