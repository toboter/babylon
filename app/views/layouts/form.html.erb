<% content_for :content do %>
<div id="wrap">
  <header>
      <%= content_tag :div, class: 'navbar navbar-inverse navbar-fixed-top' do %>
        <%= render 'shared/navbar' %>
      <% end %>
      <%= content_tag :div, class: "admin-block" do %>
        <%= yield(:top_over) %>
      <% end if content_for?(:top_over) %>
  </header>

  <div class="container-fluid">

	  <%= render "shared/debug" %>    
	  <%= render "shared/flash", flash: flash %>


    <%= content_tag :div, class: "row-fluid" do %>
      <div class="span12">
        <%= content_tag :h1, yield(:title), class: 'pagetop' if show_title? %>
        <%= content_tag :h2, yield(:subtitle), class: 'subtitle' if show_title? %>
        <%= yield(:error) %>
      </div>
    <% end unless content_for?(:top_over) %>
  
    <div class="row-fluid">
      <%= content_tag :div, class: 'span2' do %>
      	<%= yield(:nav) %>
      <% end if content_for?(:nav) %>

      <%= content_tag :div, class: content_for?(:nav) ? 'span10' : 'span12' do %>
      	<%= content_for?(:main_section) ? yield(:main_section) : yield %>
      <% end %>
  	</div>
    
  </div>
  <div id="push"></div>
</div>
<div id="footer">
  <%= render "shared/site_footer" %>
</div>

<% end %>

<%= render :template => 'layouts/application' %>