<% content_for :content do %>
  <div class="row">
    <div class="span12">
      <%= content_tag :h1, yield(:title), class: 'pagetop' if show_title? %>
      <%= content_tag :h2, yield(:subtitle), class: 'subtitle' if show_title? %>
  	</div>
  </div>

  <div class="row">
  	<div class="span8">
      <%= yield(:main_section) %>
    </div>
    <div class="span4">
      <%= yield(:publishing_section) %>
      <%= yield(:sidebar_section) %>
    </div>  
  </div>

<% end %>

<%= render :template => 'layouts/application' %>