<% title "Books", nil %>

<% content_for :breadcrumbs_section do %>
  <nav class="breadcrumbs">
    <%= link_to "Explore", explore_path %>
    <%= link_to 'Books', books_path %>
  </nav>
<% end %>

<% content_for :link_section do %>
  <div class="button-bar right">
    <ul class="button-group">
      <% if can? :edit, @books %>
        <%= link_to 'New Book', new_book_path, class: "button small" %>
        <%= link_to 'New Reference', new_reference_path, class: "button small" %>
      <% end %>
      <li><%= link_to "Bibliography", references_path, class: "button small secondary" %></li>
      <li><%= link_to "Periodicals and Series", serials_path, class: "button small secondary" %></li>
    </ul>
  </div>
<% end %>

<% content_for :main_section do %>
  <table>
    <tr>
      <th></th>
      <th>Year</th>
      <th>Booktitle</th>
      <th>Place</th>
      <th>Publisher</th>
      <th>Book type</th>
      <th>Unpublished</th>
      <% if can? :edit, @books %>
        <th></th>
      <% end %>
    </tr>
  
    <% @books.each do |book| %>
      <tr>
        <td><%= book_edited_by(book) %></td>
        <td><%= book.year %></td>
        <td><%= book_title(book) %></td>
        <td><%= book.place %></td>
        <td><%= book.publisher %></td>
        <td><%= book.book_type %></td>
        <td><%= book.unpublished %></td>
        <% if can? :edit, @books %>
          <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <% end %>
      </tr>
    <% end %>
  </table>
<% end %>