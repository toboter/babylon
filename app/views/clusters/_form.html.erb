<%= form_for @cluster, :html => { :class => 'form-horizontal'} do |f| %>
  <%= f.error_messages %>
  <div class="row">
    <div class="span6">
      <div class="control-group">
        <%= f.label :name, class: 'control-label' %>
        <div class="controls">
          <%= f.text_field :name, class: 'input-block-level' %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :speaker_id, class: 'control-label' %>
        <div class="controls">
          <%= f.collection_select :speaker_id, User.all, :id, :available_name, {}, {class: 'form-control chosen-select input-block-level'} %>
        </div>
      </div>
    
      <div class="control-group">
        <%= f.label :cluster_admin_id, class: 'control-label' %>
        <div class="controls">
          <%= f.collection_select :cluster_admin_id, User.all, :id, :available_name, {}, {class: 'form-control chosen-select input-block-level'} %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :contact, class: 'control-label' %>
        <div class="controls">
          <%= f.text_area :contact, class: 'input-block-level', rows: 5 %>
        </div>
      </div>

    </div>
  </div>

  <div class="form-actions">
    <%= f.submit "Speichern", :class => 'btn btn-primary' %>
    <% if @cluster.new_record? %>
        <%= link_to 'Abbrechen', clusters_path, :class => 'btn' %>
    <% else %>
      <%= link_to 'Abbrechen', @cluster, :class => 'btn' %>
    <% end %>
  </div>

<% end %>
