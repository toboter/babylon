<% title "Research Modules", nil %>

<% content_for :add_section do %>
  <li><%= link_to "Module", new_cluster_path %></li>
<% end %>

<% content_for :breadcrumbs_section do %>
  <%= content_tag(:li, link_to("Root", root_path) + content_tag(:span, '/', class: 'divider')) %>
  <%= content_tag :li, "Modules", class: 'active' %>
<% end %>

<% content_for :main_section do %>
  <div class="span12">
  	<% @clusters.each do |cluster| %>
  	  <div class="cluster-entry well">
    	<h3><%= link_to "#{cluster.name}", cluster %></h3>
    	<% if cluster.documents.doctype('Introduction').present? %>
      	  <%= render "documents/with_document_type", var: cluster, dtype: "Introduction" if cluster.documents.doctype('Introduction') %>
        <% else %>
    	  <p>No Introduction available</p>
        <% end %>
      </div>
	<% end %>
  </div>
<% end %>