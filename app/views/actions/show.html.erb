<% title "Source", "#{@action.actable.name} :: #{@action.predicate.name}" %>


<% content_for :breadcrumbs_section do %>
  <%= content_tag(:li, link_to("Root", root_path) + content_tag(:span, '/', class: 'divider')) %>
  <%= content_tag(:li, (link_to (@action.actable.class.to_s == 'Item' ? 'Objects' : @action.actable.class.name.pluralize), [@action.actable.class]) + content_tag(:span, '/', class: 'divider')) if @action.actable %>
  <li><%= link_to @action.actable.name, @action.actable %> <span class="divider">/</span></li>
  <li><%= link_to 'Sources', [@action.actable, :actions] %> <span class="divider">/</span></li>
  <%= content_tag :li, "#{@action.predicate.name}", class: 'active' %>
<% end %>

<% content_for :main_section do %>
  <div class="alert alert-info">
    <strong>
      <%= @action.predicate.name %> <%= link_to @action.person.name, @action.person, class: 'popover-right', data: { 'original-title' => graded_fullname(@action.person), 'content' => markdown(@action.person.general) } %>
      <%= "on #{@action.actable_date_text.to_date.strftime("%d.%m.%Y")}" if @action.actable_date_text %>
    </strong>
  </div>
              <ul class="unstyled">
                <%= content_tag :li do %>
                  <div class="alert">
                    <% for location in @action.locations do %>
                        <%= name_only_or_link_to(location.creator) %> added <%= location.address %> [<%= link_to "#{location.latitude}, #{location.longitude}", "https://www.google.de/maps/@#{location.latitude},#{location.longitude},13z", target: '_blank' %>] as location <%= "[#{location.created_at}]" if location.created_at %> to <%= @action.name %><br>
                    <% end %>
                  </div>
                <% end if @action.locations.any? %>
                <% for source in @action.sources do %>
                  <%= content_tag :li do %>
                    <%= render source %>
                  <% end %>
                  <%= content_tag :li do %>
                    <%= content_tag :table, class: "table table-bordered table-hover" do %>
                      <tbody>
                        <%= render source.documents %>
                      </tbody>
                    <% end %>
                  <% end %>
                  <%= content_tag :li do %>
                    <%= render source.buckets, personal: false %>
                  <% end %>
                <% end if @action.sources.any? %>
              </ul>
<% end %>