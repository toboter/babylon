<div class="well" id="group-<%=group.id%>">
  <div class="row-fluid">
    <div class="span12">
      <h4>
        <%= link_to "#{group.cluster.name+' / '+group.name}", [group.cluster, group] %>
      </h4>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span12">
      <% if group.documents.doctype('Introduction').present? %>
        <%= render "documents/with_document_type", var: group, dtype: "Introduction" if group.documents.doctype('Introduction') %>
      <% else %>
        No Introduction to show. <%= link_to 'Create one!', [:edit, group.documents.doctype('Introduction')] if group.documents.doctype('Introduction') %>
      <% end %>
    </div>

  </div>
</div>