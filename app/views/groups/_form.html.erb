<%= form_for [@cluster, @group], :html => { :class => 'form-horizontal'} do |f| %>
  <%= f.error_messages %>

  <div class="row">
    <div class="span6">
      <div class="control-group">
        <%= f.label :name, class: 'control-label' %>
        <div class="controls">
          <%= f.text_field :name, class: 'input-block-level' %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :description, class: 'control-label' %>
        <div class="controls">
          <%= f.text_area :description, class: 'input-block-level', rows: 8 %>
        </div>
      </div>
    
      <div class="control-group">
        <%= f.label :speaker_id, class: 'control-label' %>
        <div class="controls">
          <%= f.collection_select :speaker_id, User.all, :id, :available_name, {}, {class: 'form-control chosen-select input-block-level'} %>
        </div>
      </div>
    
      <div class="control-group">
        <%= f.label :group_admin_id, class: 'control-label' %>
        <div class="controls">
          <%= f.collection_select :group_admin_id, User.all, :id, :available_name, {}, {class: 'form-control chosen-select input-block-level'} %>
        </div>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit "Speichern", :class => 'btn btn-primary' %>
    <% if @group.new_record? %>
      <% if @group.cluster %>
        <%= link_to 'Abbrechen', @group.cluster, :class => 'btn' %>
      <% else %>
        <%= link_to 'Abbrechen', groups_path, :class => 'btn' %>
      <% end %>
    <% else %>
      <%= link_to 'Abbrechen', @group, :class => 'btn' %>
    <% end %>
  </div>

<% end %>
