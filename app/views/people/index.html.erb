<% title "People", nil %>

<% content_for :breadcrumbs_section do %>
  <nav class="breadcrumbs">
    <%= link_to 'People', people_path %>
  </nav>
<% end %>

<% content_for :link_section do %>

<% end %>

<% content_for :main_section do %>
  <ul class="no-bullet" style="padding-left:20px;">
    <% @people.each do |person| %>
        <li><% if person.user_id %><span data-tooltip class="has-tip" title="This Person has a connected user-account in BABylo-tec." style="margin-left:-20px;"><i class="foundicon-lock"></i></span><% end %>
        <%= link_to "#{graded_fullname(person)}", person %></li>
    <% end %>
  </ul>
<% end %>

<% content_for :footer_section do %>
  <% if can? :edit, @people %>
    <div class="large-6 columns">
      <ul class="pricing-table">
        <li class="title">People</li>
        <li class="description">Hier ergänzender Text über die Möglichkeiten und Konsequenzen eine neuen Person</li>
        <li class="cta-button"><%= link_to 'Add Person', new_person_path, class: "button" %><% unless connected_profile %> or create <%= link_to "your profile", new_person_path(:user_id => current_user) %><% end %> </li>
      </ul>
    </div>
  <% end %>
<% end %>