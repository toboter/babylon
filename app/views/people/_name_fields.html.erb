<fieldset class="nested-fields">
  <div class="person_name-field">
    <div class="control-group">
      <%= f.label :first_name, class: 'control-label' %>
      <div class="controls">
        <%= f.text_field :first_name, class: 'input-large' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :last_name, class: 'control-label' %>
      <div class="form-inline controls">
        <%= f.text_field :last_name, class: 'input-large' %>
        <%= f.label :primary, class: 'checkbox' do %>
        <%= f.check_box :primary %>
        Primary?
        <% end %>
        <small><%= link_to_remove_association "remove", f %></small>
      </div>
    </div>
  </div>
</fieldset>