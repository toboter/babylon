<fieldset>
  <div class="institution-field">
    <div class="control-group">
      <%= f.label :institution_id, 'Institution', class: 'control-label' %>
      <div class="form-inline controls">
        <%= f.collection_select :institution_id, Institution.all, :id, :name, {include_blank: true}, class: 'input-xxlarge' %>  
        <small><%= f.link_to_remove "remove" %></small>
      </div>
      <div class="controls" style="margin-top:5px;">
        <div id="affiliated-from-to" class="form-inline">
          <%= f.label :from, 'From' %>
          <div class="input-append date">
            <%= f.text_field :from, placeholder: 'Type date', :'data-behaviour' => 'datepicker' %>
            <span class="add-on"><i class="icon-th"></i></span>
          </div>
          <%= f.label :to, 'to' %>
          <div class="input-append date">
            <%= f.text_field :to, placeholder: 'Type date', :'data-behaviour' => 'datepicker' %>
            <span class="add-on"><i class="icon-th"></i></span>
          </div>
          <%= f.label :primary, class: 'checkbox' do %>
            <%= f.check_box :primary %>
            Primary?
          <% end %>
        </div>
      </div>
    </div>  
  </div>
</fieldset>