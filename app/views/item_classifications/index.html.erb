<% title "Item classifications", nil %>

<% content_for :breadcrumbs_section do %>
  <%= content_tag(:li, link_to("Root", root_path) + content_tag(:span, '/', class: 'divider')) %>
  <%= content_tag :li, "Item classifications", class: 'active' %>
<% end %>

<% content_for :main_section do %>
  <div class="span6">
    <div class="pull-right" style="">
      <%= link_to "Create Classification", new_item_classification_path, class: "btn btn-create btn-small" if can? :create, @item_classifications %>
    </div>
    <%= render 'full_classification_tree', :item_classifications => @item_classifications, add_links_visible: true, highlight: nil %>
  </div>
<% end %>