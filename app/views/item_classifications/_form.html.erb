<%= form_for @item_classification, html: {class: 'form-horizontal'} do |f| %>
  <%= f.error_messages %>

      <div class="control-group">
        <%= f.label :name, class: 'control-label' %>
        <div class="controls">
          <%= f.text_field :name, class: 'input-block-level' %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :description, class: 'control-label' %>
        <div class="controls">
          <%= f.text_area :description, rows: 10, class: 'input-block-level' %>
        </div>
      </div>
    
      <div class="control-group">
        <%= f.label :parent_id, 'Belongs to', class: 'control-label' %>
        <div class="controls">
          <%= f.collection_select :parent_id, ItemClassification.possible_parents(@item_classification), :id, :name, { include_blank: true }, class: 'input-block-level' %>
        </div>
      </div>
  

      <div class="form-actions">
        <%= f.submit "Speichern", :class => 'btn btn-primary' %>
        <% if @item_classification.new_record? %>
            <%= link_to 'Abbrechen', item_classifications_path, :class => 'btn' %>
        <% else %>
          <%= link_to 'Abbrechen', :back, :class => 'btn' %>
        <% end %>
      </div>

<% end %>