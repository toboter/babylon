<%= form_for(@item_classification) do |f| %>
  <%= f.error_messages %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>

  <div class="control-group">
    <%= f.label :parent_id, 'Belongs to', class: 'control-label' %>
    <div class="controls">
      <%= f.collection_select :parent_id, ItemClassification.possible_parents(@item_classification), :id, :name, { include_blank: true }, class: 'input-xxlarge' %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>