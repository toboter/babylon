<%= form_for(@area, :html => { :class => 'form-horizontal'}) do |f| %>
  <%= f.error_messages %>
  <%= f.hidden_field :cluster_id %>

  <div class="control-group">
    <%= f.label :name, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :name %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit "Speichern", :class => 'btn btn-primary' %>
    <% if @area.new_record? %>
      <% if @area.cluster %>
        <%= link_to 'Abbrechen', @area.cluster, :class => 'btn' %>
      <% else %>
        <%= link_to 'Abbrechen', areas_path, :class => 'btn' %>
      <% end %>
    <% else %>
      <%= link_to 'Abbrechen', @area, :class => 'btn' %>
    <% end %>
  </div>

<% end %>
