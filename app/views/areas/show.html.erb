<% title "Research Area: #{@area.name}", nil %>
<% edit_section_for(@area, nil) %>

<% content_for :breadcrumbs_section do %>
  <nav class="breadcrumbs">
  	<%= link_to "Module: #{@area.cluster.name}", @area.cluster %>
    <%= link_to "#{@area.name}", @area %>

  </nav>
<% end %>

<% content_for :main_section do %>
  <div class="large-8 columns">
    <%= render "shared/document_first", var: @area, dtype: "Introduction" %>

    <%= render "shared/document_docs_without_type", :var => @area %>

    <%= render "shared/add_document_box", :add_doc => @area %>

    <%= content_tag :h4, 'Groups', class: "subheader" if @area.groups.present? %>
    <%= render "shared/document_introductions", :vars => @area.groups %>

  </div>

  <div class="large-3 columns right">
    <h5 class="subheader">Creator</h5>
    <ul class="no-bullet">
      <li>
        <% unless connected_profile %>
          <%= @area.creator.available_name %>
        <% else %>
          <%= link_to "#{@area.creator.available_name}", @area.creator.people.first %>
        <% end %>
      </li>
    </ul>

    <% if @area.groups.present? %>
      <h5 class="subheader">Groups</h5>
      <ul class="no-bullet">
        <% for group in @area.groups do %>
          <li><%= link_to "#{group.name}", group %></li>
        <% end %>
      </ul>
    <% end %>

  </div>

<% end %>

<% content_for :footer_section do %>
  <% if can? :edit, @area %>
    <div class="large-6 columns push-6">
      <ul class="pricing-table">
        <li class="title">Group</li>
        <li class="description">Hier ergänzender Text über die Möglichkeiten und Konsequenzen einer neuen Gruppe in einem Area</li>
        <li class="cta-button"><%= link_to 'Add group', new_group_path(:area_id => @area), class: "button" %></li>
      </ul>
    </div>
  <% end %>
<% end %>