<div class="calendar">
  <h2 id="month" class="muted">
    <%= link_to "<", date: @date.prev_month %>
    <%= @date.strftime("%B %Y") %>
    <%= link_to ">", date: @date.next_month %>
  </h2>
  <%= calendar @date do |date| %>
    <%= link_to "#{date.day}"  %>
    <% if @todos_by_date[date] %>
      <ul>
        <% @todos_by_date[date].each do |todo| %>
          <li><%= link_to "#{todo.name}", [todo.project, todo] %></li>
        <% end %>
      </ul>
    <% end %>
  <% end %>
</div>