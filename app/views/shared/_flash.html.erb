  	  <%= content_tag :div, class: "row-fluid flash-container" do %>
        <div class="span12">
  	  	  <% flash.each do |name, msg| %>
  	  	  	<button type="button" class="close" data-dismiss="alert" style="margin-right:5px;">&times;</button>
            <%= content_tag :div, msg, :id => "flash_#{name}", class: "alert #{what_alert(name)}" %>
          <% end %>
        </div>
      <% end if flash.any? %>