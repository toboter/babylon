  <%= content_tag :ul, class: 'unstyled', style: "padding-left:#{indent}px;" do -%>
    <% tag.children.each do |leave| %>
      <%= content_tag :li do -%>
        <%= link_to "#{leave.name}", leave, class: 'name' %> 
        <%= link_to 'Add sub category', new_tag_path(:parent_id => leave) %>
        <%= render 'tag_tree', :tag => leave, :indent => (indent+10) %>
      <% end %>
    <% end %>
  <% end if tag.children.present? %>