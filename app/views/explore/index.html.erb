<% title "Explore", nil %>

<% content_for :explore do %>
  <div class="explorer">
  	<%= image_tag(@cover.assetfile.big.url) %><%= link_to '(Edit)', [@bucket.attachable, @bucket] if @welcome.present? && @bucket.present? && (can? :edit, @bucket) %>
  	<%= button_to "Add Bucket", pages_path(:permalink => 'welcome', :type => 'img'), method: :post, class: 'button tiny' unless @welcome.present? %>
  </div>
<% end %>


<% content_for :content do %>
  <div class="row">
  	<div class="large-4 columns" style="border-right:1px solid #efefef;">
  	  <%= render "doc_panel", doc: @resources, permalink: 'resources' %>
  	</div>
  	<div class="large-4 columns" style="border-right:1px solid #efefef;">
  	  <%= render "doc_panel", doc: @research, permalink: 'research' %>
  	</div>
   	<div class="large-4 columns">
  	  <h5 class="subheader"><%= @cluster.name %></h5>
  	  <p><%= truncate(@cluster.intro, length: 170, separator: ' ') %><%= link_to "... read more", @cluster %></p>
  	</div>
  </div>
  <div class="row" style="border-top:1px solid #efefef;margin-top:20px;padding-top:20px;">
  	<div class="large-6 columns" style="border-right:1px solid #efefef;">
  	  <%= render "doc_panel", doc: @about, permalink: 'about' %>
  	</div>
  	<div class="large-6 columns">
  	  <h5 class="subheader">News</h5>
  	  <p>new about the project</p>
  	</div>
  </div>
<% end %>