<h1>Listing documents</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Documentable type</th>
    <th>Documentable</th>
    <th>Document type</th>
    <th>Abstract</th>
    <th></th>

  </tr>

<% @documents.each do |document| %>
  <tr>
    <td><%= document.title %></td>
    <td><%= document.documentable_type %></td>
    <td><%= document.documentable_id %></td>
    <td><%= document.document_type %></td>
    <td><%= document.abstract %></td>
    <td><%= link_to 'Show', document %></td>


  </tr>
<% end %>
</table>
