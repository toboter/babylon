<%= form_for [@documentable, @document] do |f| %>
  <%= f.error_messages %>
  <%= f.hidden_field :document_type %>
  <%= f.hidden_field :documentable_type %>
  <%= f.hidden_field :documentable_id %>

  <%= content_tag :p do -%>
    This document belongs to: <%= link_to("#{@documentable.name}", @documentable) %>
  <% end unless @document.person? || @document.page? -%>

  <div class="control-group">
    <%= f.label :title, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :title, class: 'span8' unless @document.title_readonly? %>
      <%= f.text_field :title, class: 'span8', :readonly => true if @document.title_readonly? %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :tag_ids, "Tags", class: 'control-label' %>
    <div class="controls">
      <%= f.collection_select :tag_ids, Tag.order(:name), :id, :name, {}, {multiple: true, class: 'form-control chosen-select'} %>
    </div>
  </div>

  <% unless @document.title_readonly? %>
  <div class="control-group">
    <%= f.label :abstract, class: 'control-label' %>
    <div class="controls">
      <%= f.text_area :abstract, rows: 4, class: 'span8' %>
    </div>
  </div>
  <% end %>

  <div class="control-group">
    <%= f.label :content, class: 'control-label' %>
    <div class="controls">
      <%= f.text_area :content, class: 'ckeditor', id: 'content_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit "Speichern", :class => 'btn btn-primary' %>
    <% if @document.new_record? %>
      <% if @document.documentable %>
        <%= link_to 'Abbrechen', @document.documentable, :class => 'btn' %>
      <% else %>
        <%= link_to 'Abbrechen', documents_path, :class => 'btn' %>
      <% end %>
    <% else %>
      <%= link_to 'Abbrechen', :back, :class => 'btn' %>
    <% end %>
  </div>
<% end %>
