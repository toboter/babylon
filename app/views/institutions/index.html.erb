<% title "Institutions", nil %>

<% content_for :breadcrumbs_section do %>
  <nav class="breadcrumbs">
    <%= link_to "Institutions", institutions_path %>

  </nav>
<% end %>
<% content_for :main_section do %>

  <% @institutions.each do |institution| %>
    <div class="institution-entry panel">
        <h4><%= link_to "#{institution.name}", institution %></h4>
        <%= render 'institution_tree', :institution => institution, :tag => 'h5', :indent => 10 %>
    </div>
  <% end %>

<% end %>

<% content_for :footer_section do %>
  <% if can? :edit, @institutions %>
    <div class="large-6 columns">
      <ul class="pricing-table">
        <li class="title">Institution</li>
        <li class="description">Hier ergänzender Text über die Möglichkeiten und Konsequenzen einer neuen Institution</li>
        <li class="cta-button"><%= link_to 'Add Institution', new_institution_path, class: "button small" %></li>
      </ul>
    </div>
  <% end %>
<% end %>