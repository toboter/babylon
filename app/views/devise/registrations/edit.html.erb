<% title "Account", nil %>
<div class="row">
  <div class="small-10 large-6 large-centered small-centered columns">
    <h3 style="margin-top:10px;">Edit <%= resource_name.to_s.humanize %></h3>
    <h4 class="subtitle"><%= resource.available_name %></h4>

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
      <%= devise_error_messages! %>
    
      <div><%= f.label :email %>
      <%= f.email_field :email, :autofocus => true %></div>
    
      <div><%= f.label :username %>
      <%= f.text_field :username %></div>
    
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
    
      <div><%= f.label :password do %>Password <i>(leave blank if you don't want to change it)</i>
      <%= f.password_field :password, :autocomplete => "off" %><% end %></div>
    
      <div><%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %></div>
    
      <div style="margin-top:30px;">
        <%= f.label :current_password do %>Current Password <i>(we need your current password to confirm your changes)</i>
        <%= f.password_field :current_password %><% end %>
      </div>
      <div style="margin-top:20px;"><%= f.submit "Update", class: 'button expand radius' %></div>
    <% end %>
<div class="row">
    <div class="large-6 columns">
      <h4 class="subheader">Cancel my account</h4>
      <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete, class: 'button alert radius disabled' %></p>
    </div>
    <div class="large-6 columns">
      <%= link_to "Back", :back, class: 'button expand radius secondary right' %>
    </div>
  </div>
  </div>
</div>
