<% title "Sign up", nil %>
<div class="row">
  <div class="small-10 large-6 large-centered small-centered columns">
    <h3 style="margin-top:10px;">Sign up</h3>
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {class: 'custom'}) do |f| %>
      <%= devise_error_messages! %>
    
      <div><%= f.label :email %>
      <%= f.email_field :email, :autofocus => true %></div>
    
      <div><%= f.label :username %>
      <%= f.text_field :username %></div>
    
      <div><%= f.label :password %>
      <%= f.password_field :password %></div>
    
      <div><%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %></div>
    
      <div style="margin-top:20px;"><%= f.submit "Sign up", class: 'button expand radius' %></div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>