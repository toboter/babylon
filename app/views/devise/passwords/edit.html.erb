<% title "Change your password", nil %>
<div class="row">
  <div class="small-10 large-6 large-centered small-centered columns">
    <h3 style="margin-top:10px;">Change your password</h3>

    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, class: 'custom' }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>
  
      <div><%= f.label :password, "New password" %>
      <%= f.password_field :password, :autofocus => true %></div>
  
      <div><%= f.label :password_confirmation, "Confirm new password" %>
      <%= f.password_field :password_confirmation %></div>
  
      <div style="margin-top:20px;"><%= f.submit "Change my password", class: 'button expand radius' %></div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
