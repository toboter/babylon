<% title "Forgot your password?", nil %>
<div class="row">
  <div class="span6 offset3">
    <h3 style="margin-top:10px;">Forgot your password?</h3>

    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, class: 'form-horizontal' }) do |f| %>
      <%= devise_error_messages! %>

      <div class="control-group">
        <%= f.label :login, "Username or Email", class: 'control-label' %>
        <div class="controls">
          <%= f.text_field :login, :autofocus => true %>
        </div>
      </div>

      <div style="margin-top:20px;">
        <%= f.submit "Send me reset password instructions", class: 'btn btn-block btn-large btn-primary' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>