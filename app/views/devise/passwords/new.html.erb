<% title "Forgot your password?", nil %>
<div class="row">
  <div class="small-10 large-6 large-centered small-centered columns">
    <h3 style="margin-top:10px;">Forgot your password?</h3>

    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, class: 'custom' }) do |f| %>
      <%= devise_error_messages! %>

      <div><%= f.label :login, "Username or Email" %>
      <%= f.text_field :login, :autofocus => true %></div>

      <div style="margin-top:20px;"><%= f.submit "Send me reset password instructions", class: 'button expand radius' %></div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>