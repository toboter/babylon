<% title "Forgot your password?", nil %>
<div class="row">
  <div class="span6">
    <h4 class="muted">Forgot your password?</h4>

    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, class: 'form-horizontal' }) do |f| %>
      <%= devise_error_messages! %>

      <div class="control-group" style="margin:30px 0;">
        <%= f.label :login, "Username or Email", class: 'control-label' %>
        <div class="controls">
          <%= f.text_field :login, :autofocus => true %>
        </div>
      </div>

      <div>
        <%= f.submit "Send me reset password instructions", class: 'btn btn-block btn-large btn-primary' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>