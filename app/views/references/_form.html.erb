<%= nested_form_for @reference, :html => {:class => "form-horizontal"} do |f| %>
  <%= f.error_messages %>

  <%= render 'reference_fields', :f => f %>

  <div class="form-actions">
  	<%= f.label :babylon_specific, "integrate into babylon bibliography?", :class => 'control-label' %>
	<%= f.check_box :babylon_specific %>
    <%= f.submit "Speichern", :class => 'btn btn-primary' %>
    <%= link_to 'Abbrechen', :back, :class => 'btn' %>
  </div>
<% end %>

