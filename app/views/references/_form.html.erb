<%= nested_form_for @reference, :html => {:class => "custom"} do |f| %>
  <%= f.error_messages %>

  <%= render 'reference_fields', :f => f %>

  <div class="form-actions">
    <%= f.submit "Speichern", :class => 'button' %>
    <%= link_to 'Abbrechen', :back, :class => 'button secondary' %>
  </div>
<% end %>

