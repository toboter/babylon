<%= form_for @reference, :html => {:class => "form-horizontal"} do |f| %>
  <%= f.error_messages %>

  <%= render 'reference_fields', :f => f %>

  <div class="form-actions">
    <%= f.submit "Speichern", :class => 'btn btn-primary' %>
    <%= link_to 'Abbrechen', :back, :class => 'btn' %>
  </div>
<% end %>

