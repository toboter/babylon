<fieldset class="nested-fields">
  <div class="author-field">
    <div class="control-group">
      <%= f.label :person_name_id, 'Author', class: 'control-label' %>
      <div class="form-inline controls">
        <%= f.collection_select :person_name_id, PersonName.order(:last_name), :id, :name_with_profession, {}, {multiple: false, class: 'chosen-select form-control'} %>
        <small><%= link_to_remove_association "remove", f, style: 'margin-left:3em;' %></small>
      </div>
    </div>  
  </div>
</fieldset>