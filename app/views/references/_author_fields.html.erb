<fieldset>
  <div class="controls controls-row">
      <div class="field">
        <%= f.label :person_id, 'Author' %>
        <%= f.collection_select :person_id, Person.order(:last_name), :id, :fullname, { :include_blank => true } %>
      </div>

    <%= f.hidden_field :reference_id, :value => @reference.id unless @book %>
    <small><%= f.link_to_remove "remove" %></small>
  </div>
</fieldset>