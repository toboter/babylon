<% references.each do |reference| %>
  <%= content_tag :div, class: 'list-entry' do -%>
    <div class="row-fluid">
      <%= content_tag :div, class: 'span3 authors' do -%>
        <ul class="unstyled">
          <li><%= authors_of_article(reference) %></li>
          <%= content_tag :li, reference.book.year if reference.book.present? %>
          <%= content_tag :li, reference.original_date unless reference.book.present? %>

        </ul>
      <% end -%>
      <%= content_tag :div, class: 'span8' do -%>
        <p>
          <%= authors_of_article(reference)+', ' %>
          <%= link_to "#{reference.title}", reference %>
          <% if reference.book.present? %>
            <%= raw(', in: '+editors(reference)) unless reference.book.book_type == 'Monographie' || reference.book.book_type == 'Monographie in einer Reihe' %>
            <%= content_tag :span, ', ' if reference.book.book_type == 'Monographie in einer Reihe' %>
            <%= article_in_book(reference) unless reference.book.book_type == 'Monographie' %>
            <%= content_tag :span, ', ' if reference.book.publisher.present? %>
            <%= reference.book.publisher if reference.book.publisher.present? %>
            <%= content_tag :span, ', ' if reference.book.place.present? %>
            <%= reference.book.place if reference.book.place.present? %>
            <%= content_tag :span, '('+reference.book.year+')' if reference.book.year.present? %>
          <% end %>
          <%= content_tag :span, ', ' if reference.first_page.present? %>
          <%= reference.first_page if reference.first_page.present? %>
          <%= content_tag :span, '-' if reference.last_page.present? %>
          <%= reference.last_page if reference.last_page.present? %>.
        </p>
      <% end -%>
      <% if can? :edit, reference %>
        <%= content_tag :div, class: 'span1 reference-edit-link' do -%>
          <p><%= link_to "Edit", edit_reference_path(reference) %></p>
        <% end -%>
      <% end %>
    </div>
  <% end -%>
<% end %>