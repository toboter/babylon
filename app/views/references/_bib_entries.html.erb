<% if references.any? %>
  <table class="table table-bordered table-hover">
    <tbody>
      <% references.each do |reference| %>
        <%= render reference %>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="" style="background-color:#f5f5f5; height:80px; padding-top:40px;">
    <p class="text-center">Nothing to show.</p>
  </div>
<% end %>