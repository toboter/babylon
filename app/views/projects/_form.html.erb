<%= nested_form_for [@projectable, @project], :html => { class: "form-horizontal" } do |f| %>
  <%= f.error_messages %>
  <%= f.hidden_field :projectable_id %>
  <%= f.hidden_field :projectable_type %>

  <div class="row">
    <div class="span12">
    <div class="control-group">
      <%= f.label :name, class: 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, class: 'span6' %>
      </div>
    </div>

    <%= f.fields_for :memberships do |builder| %>
      <%= render "membership_fields", :f => builder %>
    <% end %>
    <%= f.link_to_add "Add Member", :memberships, class: 'controls' %>

    <div class="form-actions">
      <%= f.submit "Speichern", :class => 'btn btn-primary' %>
      <% if @project.new_record? %>
        <% if @project.projectable %>
          <%= link_to 'Abbrechen', @project.projectable, :class => 'btn' %>
        <% else %>
          <%= link_to 'Abbrechen', projects_path, :class => 'btn' %>
        <% end %>
      <% else %>
        <%= link_to 'Abbrechen', [@project.projectable, @project], :class => 'btn' %>
      <% end %>
    </div>
    </div>
  </div>
<% end %>
